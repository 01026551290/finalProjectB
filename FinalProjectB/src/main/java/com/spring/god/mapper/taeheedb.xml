<!-- 호텔정보 가져오기 -->	
<select id="getViewHotel" parameterType="String" resultType="com.spring.god.hyein.model.HotelRoomVO">
select largecategoryontioncode, fk_largecategorycode
	   ,name ,businesstel ,address
	   ,info ,ontionType, img, regday 	 
	    
from LONTION
where largecategoryontioncode=#{largecategoryontioncode}
</select>

<!-- 객실정보 가져오기 -->	 
<select id="getHotelroomList" parameterType="String" resultType="com.spring.god.hyein.model.HotelRoomVO">
select productid ,fk_LargeCategoryOntionCode 
	   ,roomType ,roomOption ,productName 
	   ,weekPrice,weekenPrice
	   ,roomInfo ,productStatus
	   ,productPeriod1 ,productPeriod2
 from PRODUCT
where fk_LargeCategoryOntionCode=#{largeCategoryontionCode}	   
</select>
	 
<!-- 리뷰정보 가져오기 -->	
<select id="getReviewList" parameterType="String" resultType="com.spring.god.yujin.model.ReviewVO">
select reviewidx, memberidx, hotelidx  ,roomidx, reserveidx
	  ,title, content ,imgidx, status, star
	  ,regdate  ,groupno, fk_seq, depthno
 from review	  
where hotelidx=#{hotelidx}
</select>
 
 <!-- 체크인체크아웃 가져오기 -->
 <select id="getCheckInOut" parameterType="String" resultType="com.spring.god.yujin.model.HistoryVO">
 select fk_reserveid ,checkin ,checkout  
 from reserve2
 where fk_reserveid=#{fk_reserveid}
 </select>
   
	 
</mapper>